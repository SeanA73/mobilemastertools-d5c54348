# MobileToolsBox Production Environment Configuration
# Copy this file to .env.production and fill in your actual values
# IMPORTANT: Never commit .env.production to version control!

# ============================================
# Database Configuration
# ============================================
# Supabase PostgreSQL connection string
# Get from: Supabase Project Settings > Database > Connection String
# Format: postgresql://postgres:[YOUR-PASSWORD]@[PROJECT-REF].supabase.co:5432/postgres?sslmode=require
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@[PROJECT-REF].supabase.co:5432/postgres?sslmode=require

# ============================================
# Session & Security
# ============================================
# Generate a strong random secret (use: openssl rand -base64 32)
SESSION_SECRET=your-very-long-random-secret-key-here-change-this

# Node environment
NODE_ENV=production

# Server port (default: 5000)
PORT=5000

# ============================================
# Email Service (SendGrid)
# ============================================
# SendGrid API key for email notifications
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Email sender address
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=MobileToolsBox

# ============================================
# Stripe (for donations/payments)
# ============================================
# Stripe secret key for processing payments
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key-here

# Stripe webhook secret for verifying webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# ============================================
# Google AdSense
# ============================================
# Google AdSense Client ID
# Get from: https://www.google.com/adsense
VITE_ADSENSE_CLIENT_ID=ca-pub-your-adsense-client-id

# ============================================
# Application URLs
# ============================================
# Your production domain
APP_URL=https://yourdomain.com

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Mobile App Configuration
# ============================================
# API endpoint for mobile apps
MOBILE_API_URL=https://yourdomain.com/api

# ============================================
# Optional: Third-party Services
# ============================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics ID (optional)
# GA_TRACKING_ID=G-XXXXXXXXXX

# ============================================
# Feature Flags
# ============================================
# Enable/disable features in production
ENABLE_SUBSCRIPTIONS=true
ENABLE_PAYMENTS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ADMIN_PANEL=true

# ============================================
# Rate Limiting
# ============================================
# API rate limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================
# File Storage (if using cloud storage)
# ============================================
# AWS S3 or compatible service (optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=mobiletoolsbox-uploads

